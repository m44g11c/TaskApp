<div class="header">
  <div class="container">
    <h1>Task Info</h1>
  </div>
</div>

<div class="task">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="jumbotron">
          <h2><%= @task.title %></h2>
          <p>Desc: <%= @task.description %></p>
          <p>Status: <%= @task.status %></p>
          <p><%= link_to "Edit", edit_task_path(@task), :class => "btn btn-default" %></p>
        </div>
      </div>
    </div>
  </div>
</div>

