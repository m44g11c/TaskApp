<div class="row">
  <div class="col-lg-12">
    <h3>Task Page</h3>
  </div>
</div>

<div class="task">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="jumbotron">
          <h2><%= @task.title %></h2>
          <p>Desc: <%= @task.description %></p>
          <p>Status: <%= @task.status %></p>
          <p><%= link_to "Edit", edit_task_path(@task), :class => "btn btn-default" %></p>
        </div>
        <hr>
        <h3>Users:</h3>
        <ul class="list-group">
          <% @task.users.each do |u| %>
           <li class="list-group-item">
            <%= u.first_name %>  <%= u.last_name %>
           </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
