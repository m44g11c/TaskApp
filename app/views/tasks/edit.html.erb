<div class="row">
  <div class="col-lg-12">
    <h3>Edit Task</h3>
  </div>
</div>

<div class="task">
  <div class="container">
    
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <label for="email">Title:</label>
        <%= f.text_field :title, :class => "form-control" %>
      </div>
      <div class="form-group">
        <label for="email">Description:</label>
        <%= f.text_field :description, :class => "form-control" %>
      </div>
      <div class="form-group"> 
        <label for="status">Status:</label> 
        <%= f.select :status, [["New", "New"], ["In Progress", "In Progress"], ["Done", "Done"]], {}, {class: "form-control"} %>
      </div>
      
      <%= fields_for @user do |user| %>
        <div class="form-group"> 
          <label for="add user">Add User:</label> 
          <%= collection_select(:user, :id, User.all, :id, :last_name, {include_blank: true}, {:class=>'form-control'}) %>
        </div>
      <% end %>

      <%= f.submit "Update", :class => "btn btn-default" %>
    <% end %> 

  </div>
</div> 

