<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Users</h3>
    </div>
</div>
<!-- /.row -->

<!-- Page Features -->
<div class="row text-center">              
  
    <table class="table"> 
      <thead>
       <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </tr> 
    </thead> 
    <tbody>
     
    <% @users.each do |user| %>
          
      <tr >
        <td scope="row"><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td> 
        <td><%= user.email %></td> 
      </tr> 
                    
    <% end %>

    </tbody> 
  </table>
  
</div>
